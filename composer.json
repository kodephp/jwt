{
    "name": "kode/jwt",
    "description": "A robust, comprehensive, and modern PHP 8.1+ JWT package with SSO/MLO support, blacklist management, auto-refresh, multi-platform compatibility for FPM/Swoole/RoadRunner",
    "type": "library",
    "license": "Apache-2.0",
    "keywords": [
        "jwt",
        "sso",
        "mlo",
        "authentication",
        "security",
        "token",
        "php81",
        "php82",
        "php83",
        "oauth",
        "oauth2",
        "fpm",
        "swoole",
        "roadrunner",
        "hyperf",
        "laravel",
        "thinkphp"
    ],
    "authors": [
        {
            "name": "Kode Team",
            "email": "kode@example.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "suggest": {
        "ext-redis": "Required to use Redis storage",
        "ext-apcu": "Required to use APCu storage",
        "ext-memcached": "Required to use Memcached storage",
        "ext-pdo": "Required to use Database storage",
        "ext-swoole": "Required to use Swoole coroutine Redis storage"
    },
    "autoload": {
        "psr-4": {
            "Kode\\Jwt\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kode\\Jwt\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=PSR12 src/",
        "phpcbf": "phpcbf --standard=PSR12 src/",
        "phpstan": "phpstan analyse src/ --level=7",
        "fix": "php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "fix-dry-run": "php-cs-fixer fix --config=.php-cs-fixer.dist.php --dry-run"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}